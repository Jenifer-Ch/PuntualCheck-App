<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo del cuadro (blanco) -->
    <solid android:color="@android:color/white" />

    <!-- Borde del cuadro (Gris claro) -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Bordes redondeados -->
    <corners android:radius="8dp" />

    <!-- Espacio interno para que el texto no pegue a los bordes -->
    <padding
        android:bottom="10dp"
        android:left="15dp"
        android:right="15dp"
        android:top="10dp" />
</shape>