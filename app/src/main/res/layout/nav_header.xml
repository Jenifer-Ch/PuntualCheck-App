<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/modern_blue_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- CÃ­rculo blanco para resaltar el logo oscuro -->
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/blanco">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/logo_institucion"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUsuarioNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Puntual Check"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="@color/modern_orange"
        android:layout_marginTop="8dp" />

</LinearLayout>