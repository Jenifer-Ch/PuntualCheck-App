<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modern_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- DASHBOARD PARA ESTUDIANTE (Contenedor de estadÃ­sticas) -->
        <LinearLayout
            android:id="@+id/containerStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView android:id="@+id/tvAsistenciaPorcentaje"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="--" android:textStyle="bold" android:textSize="20sp" android:textColor="@color/modern_blue_primary"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Asistencia" android:textSize="11sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView android:id="@+id/tvTardanzasConteo"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="--" android:textStyle="bold" android:textSize="20sp" android:textColor="@color/modern_orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Tardanzas" android:textSize="11sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- BARRA DE FILTROS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLabelHistorial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi Historial"
                android:textStyle="bold"
                android:textColor="@color/modern_blue_dark"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltrarFecha"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTRAR"
                app:icon="@android:drawable/ic_menu_today" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiarFiltro"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:visibility="gone"
                android:textColor="@color/modern_orange" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAsistencias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp" />

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>