<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modern_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER AZUL CON SELECTOR CLARO -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/modern_blue_dark"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione un representado"
                android:textColor="@color/blanco"
                android:textSize="14sp"
                android:alpha="0.7" />

            <!-- Selector con fondo blanco para legibilidad total -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSelector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/blanco">

                <Spinner
                    android:id="@+id/spinnerHijos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:spinnerMode="dropdown" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvNombreHijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardSelector"
                android:layout_marginTop="20dp"
                android:text="Nombre del Estudiante"
                android:textColor="@color/blanco"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- TARJETAS DE ESTADÃSTICAS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-50dp"
            android:paddingHorizontal="20dp"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" app:cardCornerRadius="16dp" app:cardElevation="0dp"
                app:strokeWidth="1dp" app:strokeColor="#E0E0E0">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:gravity="center" android:orientation="vertical" android:background="@color/blanco">
                    <TextView android:id="@+id/tvPorcentajeAsistencia" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="--" android:textSize="24sp"
                        android:textStyle="bold" android:textColor="@color/modern_blue_primary"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Asistencia" android:textSize="12sp" android:textColor="@color/texto_secundario"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1"
                android:layout_marginStart="8dp" app:cardCornerRadius="16dp" app:cardElevation="0dp"
                app:strokeWidth="1dp" app:strokeColor="#E0E0E0">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:gravity="center" android:orientation="vertical" android:background="@color/blanco">
                    <TextView android:id="@+id/tvConteoTardanzas" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="--" android:textSize="24sp"
                        android:textStyle="bold" android:textColor="@color/modern_orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Tardanzas" android:textSize="12sp" android:textColor="@color/texto_secundario"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- BARRA DE FILTROS PARA REPRESENTANTE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="25dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Historial Individual"
                android:textStyle="bold"
                android:textColor="@color/modern_blue_dark"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFiltrarRep"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTRAR"
                app:icon="@android:drawable/ic_menu_today" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiarFiltroRep"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:visibility="gone"
                android:textColor="@color/modern_orange" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAsistenciasHijo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="12dp"
            android:clipToPadding="false"
            android:paddingBottom="20dp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>